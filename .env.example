# CourseForge Environment Configuration
# Copy this file to .env and fill in your API keys

# Database Configuration (Backend)
DATABASE_URL=postgresql://username:password@localhost:5432/courseforge
DATABASE_SSL=false

# Authentication & Security (Backend)
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-for-api-keys-here
SESSION_SECRET=your-session-secret-here

# AI Provider API Keys (Backend - Optional, users can bring their own)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Frontend Configuration (Vite)
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=CourseForge
VITE_APP_VERSION=2.0.0

# Development Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug

# Rate Limiting (Backend)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Configuration (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=

# Feature Flags
VITE_ENABLE_BYOK=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EXPORT=true

# Email Configuration (Future use)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# File Storage (Future use)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=courseforge-uploads

# Redis Configuration (Future use)
REDIS_URL=redis://localhost:6379
